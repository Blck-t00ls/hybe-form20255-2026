# HYBE Fan-Permit Email OTP Configuration
# Copy this file to .env and fill in your actual values

# Email Service Configuration
EMAIL_PROVIDER=gmail
# Options: gmail, sendgrid, smtp

# Gmail Configuration (if using EMAIL_PROVIDER=gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Generic SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Email Settings
EMAIL_FROM="HYBE Fan-Permit <noreply@hybecorp.com>"

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
NODE_ENV=development

# Rate Limiting (Optional - uses defaults if not set)
OTP_RATE_LIMIT_MAX_REQUESTS=3
OTP_RATE_LIMIT_TIME_WINDOW=300000
OTP_RATE_LIMIT_COOLDOWN=60000

# Verification Configuration (Optional)
VERIFICATION_RATE_LIMIT_MAX_ATTEMPTS=10
VERIFICATION_RATE_LIMIT_TIME_WINDOW=900000
VERIFICATION_LOCKOUT_DURATION=1800000

# Database Configuration (SQLite is used by default)
# For production, consider using a managed database service
DB_ENCRYPTION_KEY=your-32-character-encryption-key

# Security Headers Configuration
FORCE_HTTPS=true
